{
    "name": "lumi",
    "version": "1.0.0-develop.19",
    "description": "",
    "repository": {
        "type": "git",
        "url": "https://github.com/Lumi-education/Lumi"
    },
    "scripts": {
        "start": "npm run build && npm run dev",
        "test":
            "NODE_ENV=test ./node_modules/.bin/mocha --watch-extensions tsx,ts,test.ts --require ts-node/register --recursive ./**/*.spec.ts",
        "test:watch":
            "NODE_ENV=test ./node_modules/.bin/mocha --watch --watch-extensions tsx,ts,test.ts --require ts-node/register --recursive ./**/*.spec.ts",
        "clean": "rm -rf build && rm -rf dist",
        "uninstall": "npm run clean && rm -rf node_modules",
        "dev":
            "NODE_ENV=development ./node_modules/.bin/webpack-dev-server --config './config/webpack.config.dev.js' --progress --colors --hot --inline",
        "build":
            "npm run clean && npm run build:client && npm run build:server",
        "build:server":
            "npm run lint:server && ./node_modules/.bin/tsc --project tsconfig.server.js",
        "build:client":
            "NODE_ENV=production ./node_modules/.bin/webpack --config './config/webpack.config.prod.js' --progress --colors",
        "lint:server":
            "./node_modules/.bin/tslint --project tsconfig.server.js --config tslint.json",
        "postinstall": "npm run build"
    },
    "author": "Jan Philip Schellenberg",
    "license": "",
    "dependencies": {
        "bcrypt-nodejs": "0.0.3",
        "body-parser": "^1.18.2",
        "changes-stream": "^2.2.0",
        "classnames": "2.2.5",
        "debug": "2.3.3",
        "express": "^4.16.0",
        "http-proxy": "^1.16.2",
        "immutable": "^3.8.2",
        "jwt-simple": "^0.5.1",
        "lodash": "4.15.0",
        "markdown-it": "8.4.0",
        "material-ui": "0.16.7",
        "material-ui-chip-input": "0.16.0",
        "query-string": "^5.0.1",
        "react": "15.0.1",
        "react-dom": "15.0.1",
        "react-hot-loader": "1.3.0",
        "react-redux": "4.4.5",
        "react-router": "3.0.0",
        "react-router-redux": "4.0.7",
        "react-sortable-hoc": "0.6.7",
        "react-tap-event-plugin": "1.0.0",
        "redux": "3.5.2",
        "redux-thunk": "2.1.0",
        "shortid": "2.2.8",
        "superagent": "3.5.2",
        "url-parse": "1.1.9",
        "ws": "^3.3.1"
    },
    "devDependencies": {
        "@types/chai": "^4.0.5",
        "@types/classnames": "0.0.32",
        "@types/express": "4.0.37",
        "@types/express-serve-static-core": "4.0.49",
        "@types/lodash": "4.14.50",
        "@types/material-ui": "0.16.47",
        "@types/mocha": "^2.2.44",
        "@types/node": "7.0.2",
        "@types/react": "15.0.1",
        "@types/react-dom": "0.14.20",
        "@types/react-redux": "4.4.35",
        "@types/react-tap-event-plugin": "0.0.30",
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-preset-es2015": "^6.24.1",
        "chai": "^4.1.2",
        "file-loader": "0.9.0",
        "html-webpack-plugin": "^2.30.1",
        "mocha": "^4.0.1",
        "ts-loader": "2.3.7",
        "ts-node": "^3.3.0",
        "tslint": "^5.7.0",
        "tslint-config-airbnb": "^5.3.1",
        "tslint-config-prettier": "^1.6.0",
        "tslint-loader": "^3.5.3",
        "tslint-react": "3.2.0",
        "typescript": "2.1.5",
